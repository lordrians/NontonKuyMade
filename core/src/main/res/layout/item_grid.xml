<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="6dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_itemgrid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_itemgrid_height"
            android:scaleType="fitXY"
            tools:src="@color/purple_700"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-16dp"
            android:background="@drawable/bg_rate_grid"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_itemgrid_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:maxLength="3"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_rate" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_itemgrid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_movie"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="2"
            android:layout_marginStart="@dimen/margin_container"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/margin_container"/>

        <TextView
            android:id="@+id/tv_itemgrid_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_movie"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/margin_container"
            android:layout_marginEnd="@dimen/margin_container"
            android:layout_marginBottom="@dimen/margin_container"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>